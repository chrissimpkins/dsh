#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'open3'
require 'dsh.rb'

class App
  include Methadone::Main
  #include Methadone::CLILogging

  main do |query|
    begin
      language = options["l"]
      search_command = Dsh.makeCommand(query, language)
      Dsh.runit(search_command)
    rescue
      STDERR.puts "Kapow! You just blew a gasket. Probably a syntax issue. Please check your options + arguments and try again."
      STDERR.puts e.message
      exit 1
    end
  end

  description "A command line search interface to programming language/framework documentation in the Dash application (Mac OSX) with optional docset keyword filters."
  # Docset Language Flag:
  on("-l <language>","Language docset filter")
  # Required argument
  arg :query, :required

  version Dsh::VERSION

  #use_log_level_option
  begin
    go!
  rescue
    STDERR.puts "Kapow! dsh just blew a gasket. Probably a syntax issue. Please check your options + arguments and try again."
    exit 1
  end
end
